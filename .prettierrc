{
  "bracketSpacing": true,
  "explicitTypes": "always",
  "printWidth": 120,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,

  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.md",
      "options": {
        "printWidth": 80
      }
    }
  ]
}
